{
    "manifest_version": 2,
    "author": "Smilo Platform B.V.",
    "name": "Smilo Platform: Wallet",
    "description": "Smilo Platform Wallet allowing you to create, import, export wallets, see your funds and send funds.",
    "version": "1.0",
    "background": {
        "scripts": [
            "./popup/popup.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_popup": "./popup/popup.html",
        "default_icon": "./www/assets/icon/favicon.png"
    },
    "permissions": [
        "<all_urls>"
    ],
    "content_security_policy": "object-src 'self'; script-src 'self' 'unsafe-eval' blob: 'sha256-IGgUqf2i9eKZ1qu+Vn0Xn7PByjosM462r6rvjUxLGVw='",
    "-ms-preload": {
        "backgroundScript": "./lib/backgroundScriptsAPIBridge.js",
        "contentScript": "./lib/contentScriptsAPIBridge.js"
    }
}